{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "linux-maint wrapper summary JSON",
  "type": "object",
  "required": ["meta", "rows"],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string" },
        "host": { "type": "string" },
        "overall": { "type": "string" },
        "exit_code": { "type": "string" },
        "logfile": { "type": "string" }
      },
      "additionalProperties": true
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["monitor", "host", "status"],
        "properties": {
          "monitor": { "type": "string" },
          "host": { "type": "string" },
          "status": { "type": "string" },
          "reason": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
