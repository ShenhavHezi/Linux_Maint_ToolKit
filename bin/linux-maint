    sys.exit(0)

order=['CRIT','WARN','UNKNOWN','SKIP','OK']
overall={k:0 for k in order}
reason_counts={}
runs=[]

def get_kv(line, key):
    m=re.search(rf"\b{re.escape(key)}=([^ ]+)", line)
