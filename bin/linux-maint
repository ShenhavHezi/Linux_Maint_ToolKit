    names=os.listdir(log_dir)
except FileNotFoundError:
    names=[]
for name in names:
    m2 = pat.match(name)
    if not m2:
        continue
    ts=f"{m2.group(1)} {m2.group(2)}"
    try:
        epoch=time.mktime(time.strptime(ts, "%Y-%m-%d %H%M%S"))
    except Exception:
        continue
    if epoch >= cutoff:
        rows.append((epoch, os.path.join(log_dir, name)))
rows.sort()
for _,p in rows:
    print(p)
PY
        [[ -f "$f" ]] && cat "$f" >> "$tmp_since"
      done
      summary_file="$tmp_since"
    fi

